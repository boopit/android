<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BoopSetUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <!-- and everything else -->
        <item name="android:windowBackground">@color/backgroundDefault</item>
    </style>
    <style name="Theme.BoopSetUpThemeTranslucent" parent="android:Theme.Holo.Light.NoActionBar.TranslucentDecor">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <!-- and everything else -->
        <item name="android:windowBackground">@color/backgroundDefault</item>
        <!-- finally, Android maketh virtual button color, and Android taketh away -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="Theme.BoopSetUpTheme.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42dip</item>
    </style>
    <style name="Theme.BoopSetUpTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Theme.BoopSetUpTheme.PopUpAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
    <style name="Theme.BoopMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <!-- and everythinge else -->
        <item name="android:windowBackground">@color/backgroundDefault</item>
    </style>
    <style name="Theme.BoopMainTheme.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42dip</item>
    </style>
    <style name="Theme.BoopMainTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Theme.BoopMainTheme.PopUpAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
    <style name="Theme.BoopMainTheme.NavigationListView">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:colorActivatedHighlight">#ffffff</item>
        <item name="android:textColorHighlight">@color/purple</item>
    </style>
</resources>